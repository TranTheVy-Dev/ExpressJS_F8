<body>
    <div class="row">
        <div class="container">
            <h2 class="mt-3">Quản Lý Dịch Vụ </h2>
            <a class="btn btn-outline-primary float-end mb-3" href="/admin/create">Thêm dịch vụ</a>
              <a class="btn btn-outline-success float-end mb-3 me-2" href="/admin/restore">Khôi phục dịch vụ</a>
            <table class="table text-center align-middle">
                <thead>
                    <th>ID</th>
                    <th>Hình</th>
                    <th class="text-start">Tên</th>
                    <th class="text-start">Ngày tạo</th>
                    <th class="text-start">mục</th>
                    <th class="text-end">Giá</th>
                    <th class="text-end"></th>
                </thead>
                <tbody>
                    {{#each docs}}
                    <tr>
                        <td>{{this._id}}</td>
                        <td><img src="{{this.image}}" alt="" style="width:40px;height: 40px;" class="rounded-3">
                        </td>
                        <td class="text-start">{{this.name}}</td>
                        <td class="text-start">{{this.createdAt}}</td>
                        <td class="text-start">{{this.slug}}</td>
                        <td class="text-end">{{this.price}}$</td>
                        <td class="text-end">
                            <button class="btn btn-outline-success"><a style="text-decoration: none; color: yellow;" href="/admin/update/{{this._id}}"><i
                                        class="fa-solid fa-gear"></i></a></button>
                            <button class="btn btn-outline-danger mt-2"><a style="text-decoration: none; color: red;" href="/admin/delete/{{this._id}}"><i
                                        class="fa-solid fa-trash-can"></i></a></button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    </div>

</body>