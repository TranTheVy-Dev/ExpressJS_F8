<body>
    <div class="row">
        <div class="col-md-3 mt-3">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                    Danh mục dịch vụ 
                </a>
                {{#each data}}
                <a href="/categories/{{this.slug}}" class="list-group-item list-group-item-action">{{this.name}}</a>
                {{/each}}
            </div>
        </div>
        <div class="col-md-9">
                <h2 class="mt-3">Trang Chủ</h2>
            <div class="row mt-3">
                {{#each docs}}
                <div class="col-sm-3">
                    <div class="card mb-3">
                        <img src="{{this.image}}" class="card-img-top" alt="..." style="height: 200px;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text mt-3">{{this.price}} $</p>
                            <a href="/productDetail/{{this._id}}" class="btn btn-outline-success btn-lg">xem chi
                                tiết</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</body>